{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015", "ES2021.WeakRef"],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    /*"strict": true, TODO */
    "target": "es2018",
    "typeRoots": ["node_modules/@types", "definitions"],
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"],
  "include": [
    "definitions/css.d.ts",
    "definitions/react.d.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ]
}
