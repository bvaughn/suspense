{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015", "ES2021.WeakRef"],
    "module": "es2020",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types", "definitions"],
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": [
    "definitions/css.d.ts",
    "definitions/raw.d.ts",
    "definitions/react.d.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ]
}
